<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AlertDiloge" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/blue_500</item>
    </style>

    <style name="EditText.Green" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/blue_500</item>
        <item name="colorControlHighlight">@color/blue_500</item>
        <item name="colorControlNormal">@color/blue_400</item>
        <item name="android:colorPrimary">@color/blue_500</item>
        <item name="android:colorPrimaryDark">@color/blue_500</item>
    </style>

    <style name="toolbartext" parent="@style/Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/roboto_bold</item>
    </style>


    <style name="collapsingToolbarLayoutTitleColor" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
