<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/fragment_title_padding_10"
        android:background="@drawable/borderdark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:padding="@dimen/fragment_title_padding_10"
            android:background="#FF9800"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5.5"
                android:text="Consumer No"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/roboto_medium"
                />

            <TextView
                android:id="@+id/cConsumerNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="202045847332"
                android:textColor="@android:color/white"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="Consumer Name"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/cName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Shivaji Anna Awaghade"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="Division"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/cDivision"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Vaduj"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="Taluka"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/cTaluka"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Khatav"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="Sub-Division"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/cSubDivision"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Aundh"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="Section"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/cSection"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Pusesawali"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="Village"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/cVillage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Chorade"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="Voltage Level"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/cVoltagelevel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="20"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="DTC Code"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/cDTCCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="H127557"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="Sanction Load"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/sanctionedLoad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="3"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="Survey By"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/txtSurveyby"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="3"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="5"
                android:text="Location"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Location"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>