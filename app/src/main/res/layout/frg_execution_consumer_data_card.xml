<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    tools:context=".Fragment.Frg_ExecutionConsumerDataCard">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/borderdark"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:text="Name of Feeder"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/CNmFeeder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:padding="6dp"
                android:tag="Name of Feeder"
                android:background="@drawable/borderdark"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:text="T/F Make SI No."
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cSIno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:padding="6dp"
                android:inputType="number"
                android:tag="T/F Make SI No."
                android:background="@drawable/borderdark"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:text="T/F Capacity in KVA"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cCapacityKVA"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:padding="6dp"
                android:inputType="number"
                android:tag="T/F Capacity in KVA"
                android:background="@drawable/borderdark"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:text="DTR Code"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cDTRCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:padding="6dp"
                android:tag="DTR Code"
                android:background="@drawable/borderdark"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:text="Meter No."
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cMeterNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:padding="6dp"
                android:tag="Meter No."
                android:inputType="number"
                android:background="@drawable/borderdark"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:text="GPS Coordinate of DTR in Decimal"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/gpsDtr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:padding="6dp"
                android:tag="GPS Coordinate of DTR in Decimal"
                android:background="@drawable/borderdark"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="GPS Coordinate of Tapping Poll in Decimal"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/gpsTappingPoll"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:layout_margin="2dp"
                android:tag="GPS Coordinate of Tapping Poll in Decimal"
                android:background="@drawable/borderdark"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="GPS Coordinate Consumer North"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/gpsConsumerNorth"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:layout_margin="2dp"
                android:tag="GPS Coordinate Consumer North"
                android:background="@drawable/borderdark"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="GPS Coordinate Consumer East"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/gpsConsumerEast"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:layout_margin="2dp"
                android:tag="GPS Coordinate Consumer East"
                android:background="@drawable/borderdark"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:weightSum="10">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_weight="4"
                android:text="Feeder Note"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/feederNote"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="center"
                android:padding="6dp"
                android:tag="Feeder Note"
                android:background="@drawable/borderdark"
                android:textColor="@color/grey_60"
                android:fontFamily="@font/roboto_medium" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@android:color/white"
        android:padding="4dp"
        android:text="Consumer Data Card"
        android:textAppearance="@style/toolbartext"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/secondStep"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        app:backgroundTint="@color/purple"
        app:iconSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/ic_arrow_forward"
        app:tint="@color/colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>